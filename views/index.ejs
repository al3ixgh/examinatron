<main>
    <section>
        
  

        <div class="tests content">
            <h2>Todos los Tests</h2>
            <% if (tests.length > 0) { %>
            <% tests.forEach(test => { %>
          
           <h3 class="title"><%= test.pregunta %></h3>
            <ol>
                <li><%= test.respuesta1 %></li>
                <li><%= test.respuesta2 %></li>
                <li><%= test.respuesta3 %></li>
                <li><%= test.respuesta4 %></li>
            </ol>
            
            <% }) %>
            <% } else { %>
            <p>No hay nada que mostrar...</p>
            <% } %>
          
          </div>
          

    </section>
</main>
